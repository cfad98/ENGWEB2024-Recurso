extends layout

block content
    h2.w3-center
        b Entidade NIPC: 
        span= info.entidade_comunicante
    .w3-container.w3-margin-bottom
        ul.w3-ul.w3-card-4
            li
                b NIPC Entidade Comunicante: 
                span= info.author
            li
                b Entidade Comunicante: 
                span= info.autor_comunicante
            li
                b Somatorio valores dos Livros: 
                span= info.totalAmount
    .w3-container.w3-margin-bottom.w3-card-4
        h3 
            b Contratos relacionados:
        table.w3-table-all.w3-margin-top
            tr
                th id
                th title
                th author
                th publishDate
                th pages
            each data in list
                tr
                    td
                        a(href="/" + data._id)= data._id
                    td= data.title || 'Sem Informação'
                    td= data.author || 'Sem Informação'
                    td= data.publishDate || 'Sem Informação'
                    td
                        a(href="/entidades/" + data.pages)= data.pages
        a.w3-button.w3-teal.w3-margin-top.w3-margin-bottom(href="/")
            b Voltar à lista de Registos